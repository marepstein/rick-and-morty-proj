{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["__tests__/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@lib/*": ["lib/*"],
      "@routes/*": ["./routes/*"],
      "@types/*": ["types/*"],
      "*": ["backend/*"]
    }
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["./", "src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "build"]
}
